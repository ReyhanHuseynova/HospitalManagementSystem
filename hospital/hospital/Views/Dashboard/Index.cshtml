
<div class="col-12" role="main">
    <div class="col-md-12">
        <div class="page-title">
            <div class="title_left">
                <h3>Dashboard</h3>
            </div>
        </div>
        <div>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><i class="fa fa-home"></i></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ul>
        </div>


        <div class="row">

            <div class="x_panel ">

                <div class="col-12 "  >

                    <div class="bs-glyphicons"  >
                        <ul class="bs-glyphicons-list"  >

                           <a  asp-controller="Users" asp-action="Index">
                            <li>
                                <span style="font-size:xx-large; margin-bottom:10px; margin-top:3px " class="fa fa-user" aria-hidden="true"></span>
                                <span class="glyphicon-class">Users Management</span>
                            </li>
                           </a>
                            
                           <a asp-controller="Departments" asp-action="Index">
                            <li style="margin-left:24px">
                                <span style="font-size:xx-large; margin-bottom:5px" class="bi bi-heart-pulse-fill" aria-hidden="true"></span>
                                <span class="glyphicon-class">Departments</span>
                            </li>
                           </a>
                            <a asp-controller="Doctors" asp-action="Index">
                            <li style="margin-left:24px">
                                <span style="font-size:xx-large; margin-bottom:11px; margin-top:3px" class="fa fa-user-md" aria-hidden="true"></span>
                                <span class="glyphicon-class">Doctors</span>
                            </li>
                            </a>
                            <a asp-controller="Patients" asp-action="Index">
                            <li style="margin-left:24px">
                                <span style="font-size:xx-large; margin-bottom:10px; margin-top:4px" class="fa fa-male" aria-hidden="true"></span>
                                <span class="glyphicon-class">Patients</span>
                            </li>
                            </a>
                             <a asp-controller="Appointments" asp-action="Index">
                                <li style="margin-left:24px">
                                <span style="font-size:xx-large; margin-bottom:10px; margin-top:4px" class="fa fa-plus-square" aria-hidden="true"></span>
                                <span class="glyphicon-class">Appointments</span>
                            </li>
                            </a>
                            <a asp-controller="RoomEnquiry" asp-action="Index">
                            <li style="margin-left:24px">
                                <span style="font-size:xx-large; margin-bottom:10px; margin-top:4px" class="fa fa-wheelchair" aria-hidden="true"></span>
                                <span class="glyphicon-class">Rooms</span>
                            </li>
                            </a>
                            <a asp-controller="RoomBeds" asp-action="Index">
                            <li style="margin-left:17px">
                                <span style="font-size:xx-large;  margin-bottom:10px; margin-top:4px" class="fa fa-th" aria-hidden="true"></span>
                                <span class="glyphicon-class"> Room Beds</span>
                            </li>
                            </a>
                            <a asp-controller="OPD" asp-action="Index">
                            <li style="margin-top:12px">
                                <span style="font-size:xx-large; margin-bottom:10px; margin-top:4px" class="bi bi-person-plus-fill" aria-hidden="true"></span>
                                <span class="glyphicon-class">Patient OPD</span>
                            </li>
                            </a>
                            <a asp-controller="Inventory" asp-action="Index">
                            <li style="margin-left:24px; margin-top:12px">
                                <span style="font-size:xx-large; margin-bottom:10px; margin-top:4px" class="bi bi-bag-plus-fill" aria-hidden="true"></span>
                                <span class="glyphicon-class">Inventory</span>
                            </li>
                            </a>
                            <a asp-controller="Mail" asp-action="Index">
                            <li style="margin-left:24px; margin-top:12px">
                                <span style="font-size:xx-large; margin-bottom:10px; margin-top:4px" class="bi bi-envelope-at-fill" aria-hidden="true"></span>
                                <span class="glyphicon-class">Email</span>
                            </li>
                            </a>


                        </ul>

                    </div>

                </div>


            </div>
        </div>
    </div>
</div>
       
