@model List<Product>
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <h2>Products List</h2>
        <div class="x_title">
            <div>

                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>

                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                    <a asp-action="Create" class="btn btn-primary text-white"><i  class=" fa fa-plus"></i> Create</a>
                </ul>


            </div>

            <div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><i class=" bi bi-bag-plus-fill"></i></li>
                    <li class="breadcrumb-item active">Inventory Management</li>
                    <li class="breadcrumb-item active">Products </li>
                </ul>


            </div>

            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">

                        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                   
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th style="text-align:right">Action</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (Product pro in Model)
                                {
                                    <tr>

                                        <td>@pro.Name</td>

                                        <td>@pro.ItemCategory.Name</td>
                                        <td>@pro.Description</td>

                                        <td>
                                            @if (pro.IsDeactive)


                                            {
                                                <div class="badge badge-danger">Passiv</div>
                                            }
                                            else
                                            {
                                                <div class=" badge badge-success">Activ</div>
                                            }
                                        </td>


                                        <td>
                                            <div class="d-flex justify-content-end">
                                                <div style="margin-right:5px">
                                                    <a asp-action="Update" asp-route-id="@pro.Id" class="btn btn-info"> <i class=" fa fa-pencil"></i> Update</a>
                                                </div>
                                               

                                                @if (pro.IsDeactive)
                                                {

                                                    <div style="margin-right:5px">
                                                        <a asp-action="Activity" asp-route-id="@pro.Id" class="btn btn-success"> <i class=" fa fa-trash"></i> Activate</a>
                                                    </div>
                                                }
                                                else
                                                {

                                                    <div style="margin-right:5px">
                                                        <a asp-action="Activity" asp-route-id="@pro.Id" class="btn btn-danger"><i class=" fa fa-trash"></i> Deactivate</a>
                                                    </div>
                                                }

                                            </div>
                                        </td>

                                    </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

