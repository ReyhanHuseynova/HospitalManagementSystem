@model Patient
<div class="col-md-12 ">
    <div class="x_panel">

        <a class="progressbar-front-text"><i class=" fa fa-stethoscope"></i> <span>HSM Hospital</span></a>
        <h4 class="header-title">Patient Update</h4>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><i style="font-size:large" class="fa fa-male"></i></li>
            <li class="breadcrumb-item">Patient Management </li>
            <li class="breadcrumb-item">Patient Registration </li>
            <li class="breadcrumb-item active">Patient Update</li>
        </ul>
        <form method="post" enctype="multipart/form-data" class="form-horizontal form-label-left">

            <div class="form-group row ">
                <label asp-for="Name" class="control-label col-md-3 col-sm-3 "></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <label asp-for="Surname" class="control-label col-md-3 col-sm-3 "></label>

                <input asp-for="Surname" class="form-control">
                <span asp-validation-for="Surname" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <label asp-for="FatherName" class="control-label col-md-3 col-sm-3 "></label>

                <input asp-for="FatherName" class="form-control">
                <span asp-validation-for="FatherName" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <label asp-for="Age" class="control-label col-md-3 col-sm-3 "></label>

                <input asp-for="Age" class="form-control">
                <span asp-validation-for="Age" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <label asp-for="Address" class="control-label col-md-3 col-sm-3 "></label>

                <input asp-for="Address" class="form-control">
                <span asp-validation-for="Address" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <label asp-for="Number" class="control-label col-md-3 col-sm-3 "></label>

                <input asp-for="Number" class="form-control">
                <span asp-validation-for="Number" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <label asp-for="Birthday" class="control-label col-md-3 col-sm-3 "></label>

                <input asp-for="Birthday" class="form-control">
                <span asp-validation-for="Birthday" class="text-danger"></span>

            </div>
            <div class="form-group row">
                <label asp-for="RegDate" class="control-label col-md-3 col-sm-3 "></label>
                <input asp-for="RegDate" class="form-control">
                <span asp-validation-for="RegDate" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label for="exampleFormControlSelect1">Select Blood Groups</label>
                <select class="form-control" name="bloodId">
                    @foreach (BloodGroup bloodGroup in ViewBag.BloodGroups)
                    {
                        @if (Model.BloodGroupId == bloodGroup.Id)
                        {
                            <option selected value="@bloodGroup.Id">@bloodGroup.GroupName</option>
                        }
                        else
                        {
                            <option value="@bloodGroup.Id">@bloodGroup.GroupName</option>
                        }

                    }



                </select>
            </div>

            <div class="col-12">
                <button value="Submit" class="btn btn-primary" type="submit"><i class="bi bi-upload"></i> Submit</button>
                <a asp-action="Index" class="btn btn-dark"><i class="bi bi-backspace-fill"></i> Go Back</a>
            </div>









        </form>

    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}













