@model ItemStore

<div class="row">
    <div class="col-12">
        <a class="progressbar-front-text"><i class=" fa fa-stethoscope"></i> <span>HSM Hospital</span></a>
        <h4 class="header-title">Store Update</h4>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><i style="font-size:large" class=" bi bi-bag-plus-fill"></i></li>
            <li style="font-size:medium" class="breadcrumb-item">Inventory Management </li>
            <li style="font-size:medium" class="breadcrumb-item">Product Store </li>
            <li style="font-size:medium" class="breadcrumb-item active">Store Update</li>
        </ul>


        <form method="post" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
            <div class="col-md-6">
                <div class="form-outline">
                    <label asp-for="StockCode" for="validationCustom03" class="form-label"></label>
                    <input asp-for="StockCode" class="form-control" id="validationCustom03" required />

                    <div class="invalid-feedback">Please provide a valid code.</div>

                </div>
            </div>

            <div class="col-md-6">
                <div class="form-outline">
                    <label asp-for="StoreName" for="validationCustom03" class="form-label"></label>
                    <input asp-for="StoreName" class="form-control" id="validationCustom03" required />
                     <div class="invalid-feedback">Please provide a valid name.</div>
                    <span asp-validation-for="StoreName" class="text-danger"></span>

                </div>
            </div>

            <div class="col-md-6">
                <div class="form-outline">
                    <label asp-for="Description" for="validationCustom03" class="form-label"></label>

                    <input asp-for="Description" class="form-control" id="validationCustom03" required />
                    <div class="invalid-feedback">Please provide a valid description.</div>
                </div>
            </div>




            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required />
                    <label class="form-check-label" for="invalidCheck">Agree to terms and conditions</label>
                    <div class="invalid-feedback">You must agree before submitting.</div>
                </div>
            </div>
            <div class="col-12">
                <button style="margin-top:8px" class="btn btn-primary" type="submit"><i class="bi bi-upload"></i> Submit</button>
                <a asp-action="Index" style="margin-top:8px" class="btn btn-dark"><i class="bi bi-backspace-fill"></i> Go Back</a>
            </div>

        </form>

    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>



