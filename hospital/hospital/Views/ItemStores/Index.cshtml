@model List<ItemStore>





<!-- page content -->
<div class="col-12" role="main">
    <div class="">
       

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <h2>Product Store</h2>
                    <div class="x_title">
                    <div >
                       
                       <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                                <a asp-action="Create" class="btn btn-primary text-white"><i class=" fa fa-plus"></i> Create</a>
                        </ul>

                  
                    </div>
                  
                    <div>
                        <ul class="breadcrumb">
                                <li class="breadcrumb-item"><i class="bi bi-bag-plus-fill"></i></li>
                            <li class="breadcrumb-item active">Inventory Management</li>
                            <li class="breadcrumb-item active">Product Store</li>
                        </ul>
                      

                    </div>

                    <div class="clearfix"></div>
                      </div>
                    <div class="x_content">
                        <div class="row">



                            <div class="col-sm-12">
                                <div class="card-box table-responsive">

                                  
                                    <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Stock Code</th>
                                                <th>Store Name</th>
                                                <th>Description</th>
                                                

                                                <th>Status</th>
                                                <th style="text-align:right">Action</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (ItemStore doc in Model)
                                            {
                                                <tr>
                                                    <td>@doc.StockCode</td>
                                                    <td>@doc.StoreName </td>
                                                    <td>@doc.Description </td>
                                                   
                                                    <td>
                                                        @if (doc.IsDeactive)


                                                        {
                                                            <div class="badge badge-danger">Passiv</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="badge badge-success">Activ</div>
                                                        }
                                                    </td>


                                                    <td>
                                                        <div class="d-flex justify-content-end">
                                                            <div style="margin-right:5px">
                                                                <a asp-action="Update" asp-route-id="@doc.Id" class="btn btn-info"><i class=" fa fa-pencil"></i> Update</a>
                                                            </div>
                                                            @* <div style="margin-right:5px">
                                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                                                        </div>*@

                                                            @if (doc.IsDeactive)
                                                            {

                                                                <div style="margin-right:5px">
                                                                    <a asp-action="Activity" asp-route-id="@doc.Id" class="btn btn-success"><i class=" fa fa-trash"></i> Activate</a>
                                                                </div>
                                                            }
                                                            else
                                                            {

                                                                <div style="margin-right:5px">
                                                                    <a asp-action="Activity" asp-route-id="@doc.Id" class="btn btn-danger"><i class=" fa fa-trash"></i> Deactivate</a>
                                                                </div>
                                                            }
                                                           

                                                        </div>
                                                    </td>

                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}







      