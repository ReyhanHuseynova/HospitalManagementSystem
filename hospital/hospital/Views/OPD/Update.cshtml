@model OPD

<div class="row">
    <div class="col-12">
        <a class="progressbar-front-text"><i class=" fa fa-stethoscope"></i> <span>HSM Hospital</span></a>
        <h4 class="header-title">Patient OPD Update</h4>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><i style="font-size:large" class="fa fa-male"></i></li>
            <li class="breadcrumb-item">Patient Management </li>
            <li class="breadcrumb-item">Patient OPD </li>
            <li class="breadcrumb-item active">OPD Update</li>
        </ul>


        <form method="post" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
            <div class="col-md-6">
                <div class="form-outline">
                    <label asp-for="PatientCode" for="validationCustom03" class="form-label"></label>
                    <input asp-for="PatientCode" class="form-control" id="validationCustom03" required />

                    <div class="invalid-feedback">Please provide a valid code.</div>

                </div>
            </div>

            <div class="col-md-6">
                <div class="form-outline">
                    <label asp-for="PatientFullName" for="validationCustom03" class="form-label"></label>

                    <input asp-for="PatientFullName" class="form-control" id="validationCustom03" required />
                    <div class="invalid-feedback">Please provide a valid name and surname.</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-outline">
                    <label asp-for="DateAdmit" for="validationCustom05" class="form-label"></label>
                    <input asp-for="DateAdmit" class="form-control" id="validationCustom05" required />

                    <div class="invalid-feedback">Please provide a valid father date.</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-outline">
                    <label asp-for="DateDischarge" for="validationCustom05" class="form-label"></label>
                    <input asp-for="DateDischarge" class="form-control" id="validationCustom05" required />

                    <div class="invalid-feedback">Please provide a valid date.</div>
                </div>
            </div>




            <div class="col-md-6">
                <div class="form-outline">

                    <label for="heard">Select Room Number</label>
                    <select class="form-control" name="roomId">

                        @foreach (RoomBed roomBed in ViewBag.RoomBed)
                        {
                            if(Model.RoomBedId== roomBed.Id)
                            {
                                <option selected value="@roomBed.Id">@roomBed.BedNumber</option>

                            }
                            else
                            {
                                 <option value="@roomBed.Id">@roomBed.BedNumber</option>

                            }
                        }


                    </select>
                </div>

            </div>

            <div class="col-md-6">
                <div class="form-outline">

                    <label for="heard">Select Doctor </label>
                    <select class="form-control" name="doctorId">

                        @foreach (Doctor doctor in ViewBag.Doctor)
                        {
                            if(Model.DoctorId == doctor.Id)
                            {
                                <option selected value="@doctor.Id">@doctor.Name @doctor.Surname</option>

                            }
                            else
                            {
                              <option value="@doctor.Id">@doctor.Name @doctor.Surname</option>

                            }
                        }


                    </select>
                </div>

            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required />
                    <label class="form-check-label" for="invalidCheck">Agree to terms and conditions</label>
                    <div class="invalid-feedback">You must agree before submitting.</div>
                </div>
            </div>
            <div class="col-12">
                <button style="margin-top:8px" class="btn btn-primary" type="submit"><i class="bi bi-upload"></i> Submit</button>
                <a asp-action="Index" style="margin-top:8px" class="btn btn-dark"><i class="bi bi-backspace-fill"></i> Go Back</a>
            </div>

        </form>

    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<script>
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>