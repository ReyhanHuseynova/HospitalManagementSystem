
@model AppDetail
<div class="row">
    <div class="col-12">
        
        <div class="card-body">
          <a class="progressbar-front-text"><i class=" fa fa-stethoscope"></i> <span>HSM Hospital</span></a>
        <h4 class="header-title">Appointment Create</h4>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><i style="font-size:large" class="fa fa-male"></i></li>
            <li class="breadcrumb-item">Patient Management </li>
            <li class="breadcrumb-item">Patient Appointment </li>
            <li class="breadcrumb-item active">Patient List</li>
            <li class="breadcrumb-item active">Appointment Create</li>
        </ul>
            

            <form method="post" enctype="multipart/form-data">
               
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Select Patient Name</label>
                    <select class="form-control" name="patId">
                        @foreach (Patient patient in ViewBag.Patients)
                        {
                           <option  value="@patient.Id">@patient.Name @patient.Surname</option>
                           
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleFormControlSelect1">Select Doctor Name</label>
                    <select class="form-control" name="docId">
                        @foreach (Doctor doctor in ViewBag.Doctors)
                        {
                            <option value="@doctor.Id">@doctor.Name @doctor.Surname</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Appointment.AppointmentDate" class="col-form-label"></label>
                    <input asp-for="Appointment.AppointmentDate" class="form-control">
                    <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Appointment.DateVisit" class="col-form-label"></label>
                    <input asp-for="Appointment.DateVisit" class="form-control">
                    <span asp-validation-for="Appointment.DateVisit" class="text-danger"></span>
                </div>
                 
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required />
                        <label class="form-check-label" for="invalidCheck">Agree to terms and conditions</label>
                        <div class="invalid-feedback">You must agree before submitting.</div>
                    </div>
                </div>

                 <div  class="col-12 ">
                    <button style="margin-top:8px" class="btn btn-primary" type="submit"><i class="bi bi-upload"></i> Submit</button>
                    <a asp-action="Index" style="margin-top:8px" class="btn btn-dark" type="submit"><i class="bi bi-backspace-fill"></i> Go Back</a>
                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
