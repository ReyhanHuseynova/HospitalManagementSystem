@model List<AppDetail>
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <h2>Appointment List</h2>
        <div class="x_title">
            <div>

                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>

                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                    <a asp-controller="Appointments" asp-action="AddAppointment" class="btn btn-primary text-white"><i  class=" fa fa-plus"></i> Add New Appointment</a>
                </ul>


            </div>

            <div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><i class="fa fa-male"></i></li>
                    <li class="breadcrumb-item active">Patient Management</li>
                    <li class="breadcrumb-item active">Patient Appointment</li>
                </ul>


            </div>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">
                       

                        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Patient FullName</th>
                            
                                    <th>Date Appointment</th>
                                    <th>Consultant Doctor</th>
                                    <th>DateVisited</th>
                                      <th>Patient Status</th>
                                      <th> Status</th>
                                    <th style="text-align:right">Action</th>
                                </tr>
                            </thead>


                            <tbody>
                               

                                @foreach (AppDetail appDetail in Model)
                                {
                                    <tr>


                                        <td>@appDetail.Patient.Name @appDetail.Patient.Surname</td>
                                        
                                        <td>@appDetail.Appointment.AppointmentDate</td>
                                        <td>@appDetail.Doctor.Name  @appDetail.Doctor.Surname </td>
                                        <td>@appDetail.Appointment.DateVisit</td>
                                        
                                        <td>
                                            @if (appDetail.Appointment.Status)
                                            {
                                                <div class="badge badge-success">Done</div>
                                            }
                                            else
                                            {
                                                <div class="badge badge-warning">IsComing</div>
                                            }
                                        </td>
                                        <td>
                                            @if (appDetail.Appointment.IsDeactive)


                                            {
                                                <div class="badge badge-danger">Passiv</div>
                                            }
                                            else
                                            {
                                                <div class="badge badge-success">Activ</div>
                                            }
                                        </td>


                                        <td>
                                            <div class="d-flex justify-content-end">
                                                <div style="margin-right:5px">
                                                    <a asp-action="Update" asp-route-id="@appDetail.Id" class="btn btn-info"><i class=" fa fa-pencil"></i> Update</a>
                                                </div>
                                                <div style="margin-right:5px">
                                                    <a asp-action="CheckIn" asp-route-id="@appDetail.Id" class="btn btn-success">CheckIn</a>
                                                </div>

                                                @if (appDetail.Appointment.IsDeactive)
                                                {

                                                    <div style="margin-right:5px">
                                                        <a asp-action="Activity" asp-route-id="@appDetail.Id" class="btn btn-success"><i class=" fa fa-trash"></i> Activate</a>
                                                    </div>
                                                }
                                                else
                                                {

                                                    <div style="margin-right:5px">
                                                        <a asp-action="Activity" asp-route-id="@appDetail.Id" class="btn btn-danger"><i class=" fa fa-trash"></i> Deactivate</a>
                                                    </div>
                                                }

                                            </div>
                                        </td>

                                    </tr>

                                }
                                
                             
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




