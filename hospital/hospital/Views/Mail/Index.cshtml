@model MailRequest
<div class="row">
    <div class="col-12">
        <a class="progressbar-front-text"><i class=" fa fa-stethoscope"></i> <span>HSM Hospital</span></a>
        <h4 class="header-title">Email Create</h4>

        @*<ul class="breadcrumb">
            <li class="breadcrumb-item"><i style="font-size:medium" class="bi bi-journal-medical"></i></li>
            <li class="breadcrumb-item">Room Management </li>
            <li class="breadcrumb-item">Room Category </li>
            <li class="breadcrumb-item active">Room Category Create</li>
        </ul>*@
    </div>

    <div class="col-5">

        <form method="post" class="row g-3 needs-validation" novalidate>



            <div class="col-md-12">
                <label  asp-for="ReceiverMail" for="validationCustom04" class="form-label"></label>
                <input id=""  asp-for="ReceiverMail" class="form-control" id="validationCustom03" required>
                <span asp-validation-for="ReceiverMail" class="text-danger"></span>
                <div class="invalid-feedback">
                    The ReceiverMail field is required.
                </div>

            </div>

            <div class="col-md-12">
                <label asp-for="Subject" for="validationCustom04" class="form-label"></label>
                <input asp-for="Subject" class="form-control" id="validationCustom03" required>
                <span asp-validation-for="Subject" class="text-danger"></span>
                <div class="invalid-feedback">
                    The Subject field is required.
                </div>

            </div>
            <div class="col-md-12">
                <label asp-for="Body" for="validationCustom04" class="form-label"></label>
                <textarea asp-for="Body" class="form-control" id="validationCustom04" required></textarea>
                <div class="invalid-feedback">
                    The Body field is required.
                </div>

            </div>


            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Agree to terms and conditions
                    </label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
            <div class="col-12">
                <button id="btn1" style="margin-top:8px" class="btn btn-primary" type="submit"><i class="bi bi-envelope-at-fill"></i> Send</button>
                <a asp-controller="Dashboard" asp-action="Index" style="margin-top:8px" class="btn btn-dark"><i class="bi bi-backspace-fill"></i> Go Back</a>
            </div>
        </form>

    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $('#btn1').click(function () {
        var ReceiverMail = $("#validationCustom03").val();
        var Subject = $("#validationCustom03").val();
        var Body = $("#validationCustom04").val();
       

        if (!(ReceiverMail == '' || Subject == '' || Body == '' )) {
            Swal.fire({
                icon: 'success',
                title: 'Good job!',
                text: 'You clicked the button!'
            });



        }
        else {

            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'You clicked the button!'

            });


        }


    });
</script>
